<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- базовый стиль текста Regular12-->
    <style name="TextRegular12" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <!-- стиль текста Regular16-->
    <style name="TextRegular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <!-- стиль текста Medium16-->
    <style name="TextMedium16">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
    </style>

    <!-- стиль текста Medium22-->
    <style name="TextMedium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
    </style>

    <!-- стиль текста Bold32-->
    <style name="TextBold32">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="OurCommonToolbar">
        <item name="android:background">@color/primary</item>
        <item name="android:layout_height">@dimen/tb_height</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="titleTextColor">@color/onPrimary</item>
        <item name="titleTextAppearance">@style/TextMedium22</item>
        <item name="navigationIcon">@drawable/tb_arrow_back</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@null</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="android:background">@color/primary</item>
        <item name="itemIconTint">@color/bottom_nav_color_state</item>
        <item name="itemTextColor">@color/bottom_nav_color_state</item>
        <item name="itemTextAppearanceActive">@style/TextRegular12</item>
        <item name="itemTextAppearanceInactive">@style/TextRegular12</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textColorHint">@color/color_hint_edit_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="RoundedCorners2dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="RoundedCorners12dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_height">@dimen/height_60</item>
        <item name="endIconDrawable">@drawable/ic_arrow_forward</item>
        <item name="endIconMode">custom</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/onPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeWidth">@dimen/zero_dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="IndustryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textColorHint">@color/color_hint_edit_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:maxLength">30</item>
        <item name="android:letterSpacing">0</item>

    </style>

</resources>
