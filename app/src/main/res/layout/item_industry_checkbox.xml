<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_60"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/industryTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/item_industry_description"
        android:textAppearance="@style/TextRegular16" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/industryRadioButton"
        android:layout_width="@dimen/padding_24"
        android:layout_height="@dimen/padding_24"
        android:button="@drawable/radio_selector"
        android:gravity="center_vertical|end"
        app:buttonTint="@null" />

</LinearLayout>
