<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vacancydetails.ui.VacancyDetailsFragment">

    <!-- Вертикальные Guideline слева и справа -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/OurCommonToolbar"
        app:menu="@null"
        app:title="@string/vacancy_details_header" />

    <!-- ScrollView с ограничениями и отступами -->
    <ScrollView
        android:id="@+id/detailsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/padding_24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Название вакансии -->
            <TextView
                android:id="@+id/vacancyTitle"
                style="@style/TextBold32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vacancy_name_default" />

            <!-- Зарплата -->
            <TextView
                android:id="@+id/vacancySalary"
                style="@style/TextMedium22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/vacancy_salary_default" />

            <!-- Прямоугольник с скруглёнными углами для компании -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/companyInfoBlock"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/light_gray"
                app:shapeAppearanceOverlay="@style/RoundedCorners12dp">

                <!-- Внутренний ConstraintLayout для правильного позиционирования -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Обложка компании -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/companyLogoBlock"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        app:shapeAppearance="@style/RoundedCorners12dp"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/innerLogo"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/fav_error_cat_meme" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Блок с названием компании и городом -->
                    <LinearLayout
                        android:id="@+id/companyTextBlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/companyLogoBlock"
                        app:layout_constraintStart_toEndOf="@id/companyLogoBlock"
                        app:layout_constraintTop_toTopOf="@id/companyLogoBlock"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/companyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company Name"
                            style="@style/TextMedium22" />

                        <TextView
                            android:id="@+id/companyCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            style="@style/TextRegular16" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Требуемый опыт -->
            <LinearLayout
                android:id="@+id/experienceBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/experienceLabel"
                    style="@style/TextMedium16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Требуемый опыт" />

                <TextView
                    android:id="@+id/experienceLine1"
                    style="@style/TextRegular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Опыт 1" />

                <!-- Можно добавить дополнительные строки опыта при необходимости -->

            </LinearLayout>

            <!-- Здесь можно добавить далее кнопки и другие элементы -->

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
